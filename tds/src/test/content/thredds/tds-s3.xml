      spec="cdms3:thredds-test-data?GFS_CONUS_80km_#yyyyMMdd_HHmm#\.grib1$"
      timePartition="file"/>
    <update startup="nocheck"/>
    <tdm rewrite="test" rescan="0 0/5 * * * ? *"/>
    <gribConfig datasetTypes="Best LatestFile Files"/>
  </featureCollection>
</catalog>
